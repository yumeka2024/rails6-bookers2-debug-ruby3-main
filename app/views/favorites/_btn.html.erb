<% if book.favorited_by?(current_user) %>
  <span>
    <%= link_to(book_favorite_path(book), class:"text-danger", method: :delete, remote: true) do %>
      <i class="fa fa-heart" aria-hidden="true"></i> <%= book.favorites.count %>
    <% end %>
  </span>
  <% else %>
  <span>
    <%= link_to(book_favorite_path(book), class:"text-primary", method: :post, remote: true) do %>
      <i class="fa fa-heart" aria-hidden="true"></i> <%= book.favorites.count %>
    <% end %>
  </span>
<% end %>